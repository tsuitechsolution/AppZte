<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.ztelocker.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZTELOCKER"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.FetchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.PolicyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ScanActivity"
            android:exported="false"
            android:label="@string/title_activity_scan"
            android:theme="@style/Theme.ZTELOCKER" />
        <activity
            android:name="com.example.ztelocker.ui.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ZTELOCKER">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ztelocker.ui.activity.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SupportActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ztelocker.ui.activity.TopUpHistorActivityy"
            android:exported="false" />
        <activity
            android:name="com.example.ztelocker.ui.activity.CustomerListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ztelocker.ui.activity.AddCustomerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ztelocker.ui.activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ztelocker.ui.activity.Support"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>